@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "مدیریت نقش‌ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>مدیریت نقش‌ها</h2>
    <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Roles" asp-action="Create">ایجاد نقش جدید</a>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>نام نقش</th>
            <th>عملیات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="id" value="@role.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف این نقش مطمئن هستید؟')">حذف</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">ویرایش</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">حذف</a>
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>