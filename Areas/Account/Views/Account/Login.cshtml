@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2 class="text-center">ورود</h2>
    <form method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">شماره موبایل</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required>
            <div class="invalid-feedback">لطفاً شماره موبایل خود را وارد کنید.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">کلمه عبور</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <div class="invalid-feedback">لطفاً کلمه عبور خود را وارد کنید.</div>
        </div>
        <button type="submit" class="btn btn-primary w-100">ورود</button>
    </form>
</div>