@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود با شماره موبایل</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f5f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .btn-register {
            background-color: #6c63ff;
            border: none;
            border-radius: 10px;
            color: white;
        }

            .btn-register:hover {
                background-color: #574fb9;
            }

        .text-muted {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

            .text-muted a {
                color: #6c63ff;
                text-decoration: none;
            }

                .text-muted a:hover {
                    text-decoration: underline;
                }
    </style>
</head>




<body>
    <div class="register-container">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" style="direction:rtl">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        <div class="register-header"><h2>تأیید کد ورود</h2></div>
        <form method="post" action="/Account/VerifyCode">
            <div class="mb-3">
                <label for="verificationCode" class="form-label" style="direction:rtl; display:block">کد تأیید</label>
                <input type="text" class="form-control" id="verificationCode" name="code" value="@ViewBag.VerificationCode" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">تأیید</button>
        </form>
</div>
</body>