@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ثبت‌نام</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f5f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-container {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: #333333;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-register {
            background-color: #6c63ff;
            border: none;
            border-radius: 10px;
        }

        .btn-register:hover {
            background-color: #574fb9;
        }

        .text-muted {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

        .text-muted a {
            color: #6c63ff;
            text-decoration: none;
        }

        .text-muted a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">ایجاد حساب کاربری</div>
        <form method="post" action="/Account/Register" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="firstName" class="form-label">نام</label>
                <input type="text" class="form-control" id="firstName" name="FirstName" required>
                <div class="invalid-feedback">لطفاً نام خود را وارد کنید.</div>
            </div>
            <div class="mb-3">
                <label for="lastName" class="form-label">نام خانوادگی</label>
                <input type="text" class="form-control" id="lastName" name="LastName" required>
                <div class="invalid-feedback">لطفاً نام خانوادگی خود را وارد کنید.</div>
            </div>
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">شماره موبایل</label>
                <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber" required>
                <div class="invalid-feedback">لطفاً شماره موبایل معتبر وارد کنید.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">کلمه عبور</label>
                <input type="password" class="form-control" id="password" name="Password" required>
                <div class="invalid-feedback">لطفاً کلمه عبور خود را وارد کنید.</div>
            </div>
            <button type="submit" class="btn btn-register w-100">ثبت‌نام</button>
            <div class="text-muted mt-3">
                <small>حساب کاربری دارید؟ <a href="/Account/Login">وارد شوید</a></small>
            </div>
        </form>
    </div>
</body>
</html>
