@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود با شماره موبایل</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f5f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background: #fff;
            border-radius: 15px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .btn-register {
            background-color: #6c63ff;
            border: none;
            border-radius: 10px;
            color: white;
        }

            .btn-register:hover {
                background-color: #574fb9;
            }

        .text-muted {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

            .text-muted a {
                color: #6c63ff;
                text-decoration: none;
            }

                .text-muted a:hover {
                    text-decoration: underline;
                }
    </style>
</head>


<body>
<div class="register-container" style="direction:rtl">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }
    <div class="register-header">ورود </div>
    <form method="post" action="/Account/LoginWithPassword" class="needs-validation" >
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">شماره موبایل</label>
            <input type="text" class="form-control" style="direction:ltr" id="phoneNumber" name="phoneNumber" required>
            <div class="invalid-feedback">لطفاً شماره موبایل خود را وارد کنید.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">کلمه عبور</label>
                <input type="password" class="form-control" style="direction:ltr" id="password" name="password" required>
            <div class="invalid-feedback">لطفاً کلمه عبور خود را وارد کنید.</div>
        </div>
        <button type="submit" class="btn btn-primary w-100">ورود</button>
        <div class="text-muted mt-3">
            <small>حساب کاربری ندارید؟ <a href="/Account/Register">ثبت نام کنید</a></small>
        </div>
        <div class="text-muted mt-3">
                <small><a href="/Account/ForgotPassword">فراموشی رمز عبور</a></small>
        </div>
    </form>
</div>
</body>
</html>





<script>
    // فعال کردن اعتبارسنجی Bootstrap
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>