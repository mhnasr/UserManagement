@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - مدیریت کاربران</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <style>
        body {
            direction: rtl;
            text-align: right;
        }
        .form-label {
            text-align: right;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">My Application111111</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        <li class="nav-item">
                            <span class="nav-link">سلام، @user.FirstName @user.LastName</span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-action="Logout" asp-controller="Account" >
                                <button type="submit" class="btn btn-link">خروج</button>
                            </form>
                        </li>
                        

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">ورود</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
<div class="container mt-3">
    @RenderBody()
</div>
<footer class="text-center mt-5">
    <p>&copy; 2024 مدیریت کاربران</p>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>